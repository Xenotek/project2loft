								use(xlink:href='/img/sprite.svg#soc_email')
					.drop__main.drop__main--md
						form.form
							.form__row
								input.field.field--bordered.width--full(
									type="email"
									placeholder="email"
								)
							.form__row
								button.btn.btn--clear
