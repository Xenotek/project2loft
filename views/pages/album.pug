										.info.info--light
											.info__item
												svg.info__icon
													use(xlink:href='/img/sprite.svg#comments')
												span.info__text 2
											.info__item
												svg.info__icon
													use(xlink:href='/img/sprite.svg#like')
												span.info__text 10
									div.loupe
								.photo-card__foot
									.photo-card__foot-part
										a.btn.btn--icon.btn_edit-photo(href="#404"  title="Редактировать")
											svg.btn__icon
												use(xlink:href='/img/sprite.svg#edit')
