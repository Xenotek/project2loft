html
  head
    title drag-drop example
    style.
      body {
        height: 100%;
      }
      .drag {
        border: 5px dashed red;
      }

      .upload {
        width: 300px;
        height: 200px;
        background: gray;
      }

      .upload img {
        width: 100%;
        height: 100%;
      }

      #img-container {
        width: 300px;
        height: 200px;
        background: gray;
      }
    script(src='/js/foundation.js' defer)
    script(src='/js/app.js' defer)

  body
    div
      input#file-field(type='file', name='file', multiple='true')
    #img-container
      ul#img-list
    button#upload Upload
    script(src='/js/uploaderObject.js' defer)
    script(src='/js/upload.js' defer)
