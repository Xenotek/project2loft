									type="text"
									value=socials.google.value
								)
							.form__row
								a.btn.btn--clear.btn____google-plus.social--save(href="#404")
									.btn__text Сохранить
								a.btn.btn--text.social--reset(href="#404")
									.btn__text Отменить

			li.social__item
				.drop.drop--hover.drop--def
					.drop__trigger
						a.social__btn(href="#404"  title="Email")
							svg.social__icon
								use(xlink:href='/img/sprite.svg#soc_email')
					.drop__main.drop__main--md
