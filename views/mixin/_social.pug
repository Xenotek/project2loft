-
	if(mainPageData){
		var email = mainPageData.user.email || 'email';
		var socials = {
			vk : {
				link: mainPageData.user.socials.vk.link || "#",
				title : mainPageData.user.socials.vk.title || 'Вконтакте',
				value: mainPageData.user.socials.vk.link || "Вконтакте"
			},
			fb : {
				link: mainPageData.user.socials.fb.link || "#",
				title : mainPageData.user.socials.fb.title || 'Facebook',
				value: mainPageData.user.socials.fb.link || "Facebook"
			},
			tw: {
				link: mainPageData.user.socials.tw.link || "#",
				title : mainPageData.user.socials.tw.title || 'Twitter',
				value: mainPageData.user.socials.tw.link || "Twitter"
			},
			google : {
				link: mainPageData.user.socials.google.link || "#",
				title : mainPageData.user.socials.google.title || 'Google+',
				value: mainPageData.user.socials.google.link || "Google+"
			},
			email : {
				link: mainPageData.user.socials.email.link || "#",
				title : mainPageData.user.socials.email.title || 'Email',
				value: mainPageData.user.socials.email.link || "Email+"
			}
		}
	}
	




mixin social(mode)

	if mode == 'edit'
		ul.social
			li.social__item
				.drop.drop--hover.drop--def
					.drop__trigger
						a.social__btn(
							href=socials.vk.link
							title=socials.vk.title
						)
							svg.social__icon
								use(xlink:href='/img/sprite.svg#soc_vk')
					.drop__main.drop__main--md
						.form
							.form__row
								input.field.field--bordered.width--full.input__vk(
									type="text"
									value=socials.vk.value
								)
							.form__row
								a.btn.btn--clear.btn__vk.social--save(href="#404")
									.btn__text Сохранить
								a.btn.btn--text.social--reset(href="#404")
									.btn__text Отменить

			li.social__item
				.drop.drop--hover.drop--def
					.drop__trigger
						a.social__btn.btn__facebook(
							href=socials.fb.link
							title=socials.fb.title
						)
							svg.social__icon
								use(xlink:href='/img/sprite.svg#soc_fb')
					.drop__main.drop__main--md
						.form
							.form__row
								input.field.field--bordered.width--full.input__facebook(
									type="text"
									value=socials.fb.value
								)
							.form__row
								a.btn.btn--clear.social--save(href="#404")
